# CallWaiting.ai TTS Service Environment Configuration
# =====================================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# TTS Engine Configuration
TTS_ENGINE=edge-tts
TTS_MODEL=microsoft-edge
VOICE_QUALITY=high
AUDIO_FORMAT=mp3
AUDIO_BITRATE=48
AUDIO_SAMPLE_RATE=24000

# API Configuration
API_VERSION=v1
API_PREFIX=/api
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Authentication & Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
API_KEY_HEADER=Authorization
API_KEY_PREFIX=Bearer

# Demo API Keys (for development/testing)
DEMO_API_KEY=cw_demo_12345
TEST_API_KEY=test_key_67890

# Tenant Configuration
DEFAULT_TENANT=callwaiting_demo
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_REQUESTS_PER_HOUR=10000

# Database Configuration (if using database)
DATABASE_URL=sqlite:///./tts_service.db
DATABASE_ECHO=false

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# File Storage
VOICE_STORAGE_PATH=./voice_storage
AUDIO_STORAGE_PATH=./audio_storage
TEMP_STORAGE_PATH=/tmp/tts_temp
MAX_FILE_SIZE_MB=50

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Edge TTS Configuration
EDGE_TTS_VOICES=default,naija_female,naija_male,professional,friendly,calm,energetic
EDGE_TTS_DEFAULT_VOICE=en-US-AriaNeural
EDGE_TTS_LANGUAGE=en-US

# Voice Mapping (Edge TTS voices)
VOICE_DEFAULT=en-US-AriaNeural
VOICE_NAIJA_FEMALE=en-US-JennyNeural
VOICE_NAIJA_MALE=en-US-GuyNeural
VOICE_PROFESSIONAL=en-US-DavisNeural
VOICE_FRIENDLY=en-US-EmmaNeural
VOICE_CALM=en-US-MichelleNeural
VOICE_ENERGETIC=en-US-BrianNeural

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30
AUDIO_CACHE_TTL_SECONDS=3600
STREAMING_CHUNK_SIZE=8192

# Development Settings
RELOAD_ON_CHANGE=false
AUTO_RELOAD=false
PROFILING_ENABLED=false

# Production Settings
WORKERS=1
KEEP_ALIVE_TIMEOUT=5
GRACEFUL_TIMEOUT=30

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=./logs/tts_service.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=7

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_VERIFY=false

# External Services
WEBHOOK_URL=
NOTIFICATION_EMAIL=
ALERT_WEBHOOK=

# Feature Flags
ENABLE_VOICE_CLONING=false
ENABLE_SSML_PARSING=true
ENABLE_STREAMING=true
ENABLE_BATCH_PROCESSING=false
ENABLE_VOICE_UPLOAD=false

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE=memory
RATE_LIMIT_STRATEGY=sliding_window

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100

# Audio Processing
AUDIO_NORMALIZATION=true
AUDIO_COMPRESSION=true
AUDIO_NOISE_REDUCTION=false

# Multi-tenant Settings
MULTI_TENANT_ENABLED=true
TENANT_ISOLATION_LEVEL=strict
SHARED_RESOURCES=false

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=false

# API Documentation
DOCS_ENABLED=true
DOCS_TITLE="CallWaiting.ai TTS Service"
DOCS_DESCRIPTION="High-quality TTS microservice using Microsoft Edge TTS"
DOCS_VERSION="1.0.0"

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/v1/health
HEALTH_CHECK_INTERVAL_SECONDS=30

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PATH=/v1/metrics
PROMETHEUS_ENABLED=false

# Error Handling
ERROR_DETAILS_ENABLED=true
ERROR_LOGGING_ENABLED=true
ERROR_REPORTING_ENABLED=false

# Development Tools
SWAGGER_UI_ENABLED=true
REDOC_ENABLED=true
OPENAPI_SCHEMA_ENABLED=true
