FROM python:3.11-slim

WORKDIR /workspace

# Install system dependencies including git
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

# Copy all project files
COPY . .

# Expose port 8000 (matching the service)
EXPOSE 8000

# Start command matches the template - auto-locate main.py and run with python
CMD ["bash", "-lc", "set -e && echo '🔍 Locating main.py...' && for d in /workspace/runpod-xtts /workspace; do if [ -f \"$d/main.py\" ]; then cd \"$d\" && echo \"✅ Found main.py in: $(pwd)\" && break; fi; done && echo \"📂 Current directory: $(pwd)\" && ls -la && echo \"🚀 Starting TTS service...\" && python3 main.py"]